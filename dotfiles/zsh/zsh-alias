alias _="sudo"

setopt auto_pushd
setopt pushd_ignore_dups
setopt pushdminus

alias -g ...='../..'
alias -g ....='../../..'
alias -g .....='../../../..'
alias -g ......='../../../../..'

alias -- -='cd -'
alias 1='cd -'
alias 2='cd -2'
alias 3='cd -3'
alias 4='cd -4'
alias 5='cd -5'
alias 6='cd -6'
alias 7='cd -7'
alias 8='cd -8'
alias 9='cd -9'

alias week="date +'%V'"

alias md='mkdir -p'
alias rd=rmdir

alias week='echo Week number: $(date -u +%V)'

alias lazg='lazygit'
alias lazd='lazydocker'

alias cp="cp -i" # Confirm before overwriting something
alias rm="rm -i" # Confirm before overwriting something
alias mv="mv -i" # Confirm before overwriting something
# ls / eza (ls replacement)
if ! type eza >/dev/null 2>&1; then
    print "zsh-eza-plugin: eza not found on path. Please install eza before using this plugin." >&2

    # Linux
    export LS_OPTIONS="--color=auto --group-directories-first"
    if [[ $(uname -s) != "Linux" ]]; then
        # BSD / Mac OS
        export LS_OPTIONS="-G --group-directories-first"
    fi

    alias ls="ls $LS_OPTIONS"
    alias lsa="ls -a $LS_OPTIONS"
    alias ll="ls -l $LS_OPTIONS"
    alias lla="ls -la $LS_OPTIONS"
else
    export LS_OPTIONS="--color=always --group-directories-first"
    # Regular
    alias ls="eza -F $LS_OPTIONS"
    # All
    alias lsa="eza -a $LS_OPTIONS"
    # Directories
    alias lsd="eza -lD $LS_OPTIONS"
    # Hidden
    alias lsh="eza -dl .* $LS_OPTIONS"
    # Regular with more info
    alias ll="eza -l $LS_OPTIONS"
fi
alias df='df -h'     # Human-readable sizes
alias du='du -h'     # Human-readable sizes

alias free='free -m' # Show sizes in MB
alias gitu='git add . && git commit && git push'
alias clear="printf '\033[2J\033[3J\033[1;1H'; clear"
alias cls="clear"
alias play="ffplay -nostats -hide_banner -nodisp -autoexit"

alias pacu='pamac checkupdates --aur -q'
alias pacup='sudo pamac upgrade --aur'
alias paci='sudo pamac install'
alias pacr='sudo pamac remove'
alias pacs='pamac search'
alias pacl='pamac list -i'
alias paclg='pamac list -i | grep -e'

alias nvimcfg="nvim --cmd 'cd ~/.config/nvim/'"
alias zshcfg="nvim ~/.zshrc"
alias src="exec zsh"

alias pkgconf_fzf="pkgconf --list-all | fzf"

# Combines jq and less with JSON syntax highlighting
alias jqless="jq -C \".\" | less"

if [[ $(uname -s) != "Darwin" ]]; then
    # Non Mac OS
    alias open="diso xdg-open"
fi

# Disowns application
function diso() {
    "$@" 2>/dev/null 1>&2 &
    disown
}
