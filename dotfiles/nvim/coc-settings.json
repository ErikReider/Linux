{
  "coc.preferences.bracketEnterImprove": true,
  "coc.preferences.colorSupport": true,
  "clangd.semanticHighlighting": true,
  "clangd.arguments": ["-fallback-style=Google"],
  "clangd.checkUpdates": true,
  "languageserver": {
    "digestif": {
      "command": "digestif",
      "filetypes": ["tex", "plaintex", "context"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "vala": {
      "command": "vala-language-server",
      "filetypes": ["vala", "genie"]
    },
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"],
      "rootPatterns": [".git/"],
      "settings": {
        "Lua": {
          "telemetry": {
            "enable": false
          },
          "workspace": {
            "library": {
              "/usr/share/nvim/runtime/lua": true,
              "/usr/share/nvim/runtime/lua/vim/lsp": true
            },
            "maxPreload": 2000,
            "preloadFileSize": 1000
          },
          "runtime": {
            "version": "LuaJIT"
          },
          "diagnostics": {
            "enable": true,
            "globals": [
              "hs",
              "vim",
              "it",
              "describe",
              "before_each",
              "after_each"
            ],
            "disable": ["lowercase-global"]
          },
          "completion": {
            "keywordSnippet": "Disable"
          }
        }
      }
    }
  },
  "cSpellExt.enableDictionaries": ["swedish"],
  "cSpell.language": "en,sv",
  "cSpell.dictionaries": ["english", "swedish"],
  "html-css-support.enabledLanguages": [
    "html",
    "vue",
    "blade",
    "htmldjango",
    "typescriptreact",
    "javascriptreact"
  ],
  "tsserver.enableJavascript": true,
  "javascript.showUnused": true,
  "javascript.validate.enable": true,
  "javascript.suggest.autoImports": true,
  "eslint.autoFixOnSave": true,
  "diagnostic.enableSign": true,
  "diagnostic.errorSign": "❌",
  "diagnostic.warningSign": "⚠️",
  "diagnostic.hintSign": "?",
  "diagnostic.infoSign": "",
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showAbbreviationSuggestions": true,
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["typescript"],
    "typescriptreact": ["typescript"]
  },
  "suggest.completionItemKindLabels": {
    "method": "  ",
    "function": "  ",
    "variable": "[]",
    "field": "  ",
    "typeParameter": "<>",
    "constant": "  ", 
    "class": " פּ ",
    "interface": " 蘒",
    "struct": "  ",
    "event": "  ",
    "operator": "  ",
    "module": "  ",
    "property": "  ",
    "enum": " 練",
    "reference": "  ",
    "keyword": "  ",
    "file": "  ",
    "folder": "  ",
    "color": "  ",
    "unit": " 塞 ",
    "snippet": "  ",
    "text": "  ",
    "constructor": "  ",
    "value": "  ",
    "enumMember": "  "
  }
}
