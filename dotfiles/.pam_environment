# vim: ft=sh

vblank_mode=0

# QT_AUTO_SCREEN_SCALE_FACTOR=1
QT_QPA_PLATFORM=xcb

# QT_QPA_PLATFORMTHEME="gnome"
QT_QPA_PLATFORMTHEME=qt5ct

EDITOR=/usr/bin/nvim

AMD_VULKAN_ICD=RADV

if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
    # Firefox use wayland
    MOZ_ENABLE_WAYLAND=1
    # makefirefox aware of wayland instance when launched from x11
    MOZ_DBUS_REMOTE=1
fi

if [ "$XDG_SESSION_DESKTOP" = "sway" ]; then
    # Fix Android Studio and its emulator
    export _JAVA_AWT_WM_NONREPARENTING=1
fi
