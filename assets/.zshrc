colors

# enable substitution for prompt
setopt prompt_subst


function set-prompt() {
    local top_left='%{$fg_bold[cyan]%}%~'
    local bottom_left="%{$fg_bold[white]%}> "
    local color="green"
    local top_right=""
    local mod=""
    local untr=""
    
    gitBranch=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
    if [[ "$gitBranch" != "" ]]; then
        if [[ "$(git status 2>/dev/null | grep 'modified:' | wc -l)" != "0" ]]; then
            local mod="%{$fg_bold[yellow]%}!"
            color="red"
        fi
        if [[ "$(git status 2>/dev/null | grep 'Untracked files:' | wc -l)" != "0" ]]; then
            local untr="%{$fg_bold[yellow]%}Â±"
            color="red"
        fi
        local top_right="${untr}${mod}%{$fg_bold[$color]%}[$gitBranch]"
    fi
    
    PROMPT="$top_left $top_right"$'\n'$bottom_left
}

autoload -Uz add-zsh-hook
add-zsh-hook precmd set-prompt

